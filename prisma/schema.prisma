generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ARTIST
  SPECIALIST
  STUDIO
  ADMIN
}

enum FindCategory {
  PRODUCER
  AUDIO_ENGINEER
  RECORDING_STUDIO
  PROMO_CREW
}

enum CheckInMood {
  NORMAL
  TOUGH
  FLYING
}

model User {
  id                   String           @id @default(cuid())
  safeId               String           @unique @default(cuid())
  email                String           @unique
  passwordHash         String
  nickname             String
  avatarUrl            String?
  links                Json?
  role                 UserRole         @default(ARTIST)
  notificationsEnabled Boolean          @default(true)
  demosPrivate         Boolean          @default(true)
  pathStageId          Int?
  createdAt            DateTime         @default(now())
  updatedAt            DateTime         @updatedAt
  pathStage            PathStage?       @relation(fields: [pathStageId], references: [id])
  specialistProfile    SpecialistProfile?
  folders              Folder[]
  tracks               Track[]
  checkIns             DailyCheckIn[]
  weeklyActivities     WeeklyActivity[]
  microSteps           DailyMicroStep[]
}

model SpecialistProfile {
  userId          String       @id
  category        FindCategory
  city            String?
  isOnline        Boolean      @default(true)
  isAvailableNow  Boolean      @default(false)
  bio             String?
  portfolioLinks  String[]
  budgetFrom      Int?
  contactTelegram String?
  contactUrl      String?
  user            User         @relation(fields: [userId], references: [id])
}

model Folder {
  id        String   @id @default(cuid())
  userId    String
  title     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  tracks    Track[]

  @@unique([userId, title])
}

model Track {
  id          String    @id @default(cuid())
  userId      String
  title       String
  folderId    String?
  pathStageId Int?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  user        User      @relation(fields: [userId], references: [id])
  folder      Folder?   @relation(fields: [folderId], references: [id], onDelete: SetNull)
  pathStage   PathStage? @relation(fields: [pathStageId], references: [id], onDelete: SetNull)
  demos       Demo[]
}

model Demo {
  id         String   @id @default(cuid())
  trackId    String
  audioUrl   String
  textNote   String?
  duration   Int
  createdAt  DateTime @default(now())
  track      Track    @relation(fields: [trackId], references: [id], onDelete: Cascade)
}

model PathStage {
  id          Int      @id @default(autoincrement())
  order       Int      @unique
  name        String   @unique
  iconKey     String
  description String
  users       User[]
  tracks      Track[]
  microSteps  DailyMicroStep[]
}

model DailyCheckIn {
  id        String     @id @default(cuid())
  userId    String
  date      DateTime   @db.Date
  mood      CheckInMood
  note      String?
  createdAt DateTime   @default(now())
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
}

model DailyMicroStep {
  id          String    @id @default(cuid())
  userId      String
  date        DateTime  @db.Date
  pathStageId Int?
  text        String
  isCompleted Boolean   @default(false)
  createdAt   DateTime  @default(now())
  completedAt DateTime?
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  pathStage   PathStage? @relation(fields: [pathStageId], references: [id], onDelete: SetNull)

  @@unique([userId, date])
}

model WeeklyActivity {
  id            String   @id @default(cuid())
  userId        String
  weekStartDate DateTime @db.Date
  activeDays    Int      @default(0)
  updatedAt     DateTime @updatedAt
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, weekStartDate])
}
